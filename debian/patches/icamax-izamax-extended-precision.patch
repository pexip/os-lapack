--- a/BLAS/SRC/Makefile
+++ b/BLAS/SRC/Makefile
@@ -175,3 +175,9 @@ cleanobj:
 	rm -f *.o
 cleanlib:
 	#rm -f $(BLASLIB)  # May point to a system lib, e.g. -lblas
+
+icamax.o: icamax.f
+	$(FC) $(FFLAGS) $(FFLAGS_FLOAT_STORE) -c $< -o $@
+
+izamax.o: izamax.f
+	$(FC) $(FFLAGS) $(FFLAGS_FLOAT_STORE) -c $< -o $@
